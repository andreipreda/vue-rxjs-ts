{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules/@types"],
        "experimentalDecorators": true
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
